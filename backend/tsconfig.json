{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "watch": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  // "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}